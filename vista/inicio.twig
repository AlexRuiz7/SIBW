{# inicio.twig #}

{% extends "layout.twig" %}


{% block menu %}
  <a class="navitem active" href="/?p=inicio" title="Ir a inicio"><p class="center">Inicio</p></a>
  <a class="navitem" href="/?p=listado-noticias" title="Listado de noticias"><p class="center">Noticias</p></a>
  <a class="navitem" href=#informacion title="Ir a informaciÃ³n de contacto"><p class="center">Contacto</p></a>
  <a class="navitem" href="/?p={% block p_usuario %}{% if seccion_usuarios is defined %}{{ seccion_usuarios }}{% else %}{{ parent() }}{% endif %}{% endblock %}"
    title="Iniciar sesion"><p class="center">
    {% block nombre_usuario %}
      {% if usuario is defined %}
          {{ usuario }}
      {% else %}
        {{ parent() }}
      {% endif %}
    {% endblock %}
  </p></a>
{% endblock %}


{% block principal %}
  <!-- SECCION-NOTICIAS: comienzo  -->
  <div class="seccion-noticias">

    {% for item in noticias_grid %}
      <div class="box">
        <a href="./?p=noticias&id={{ item.id }}" title="Ver noticia">
          <img src=" {{ item.imagen }} ">
        </a>
        <p> {{ item.titulo }} </p>
      </div>
    {% endfor %}

  </div>
  <!-- SECCION-NOTICIAS: fin -->
{% endblock %}
