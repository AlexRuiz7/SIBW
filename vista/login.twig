{# login.twig #}

{% extends "layout.twig" %}


{% block principal %}

<head>
  <link rel="stylesheet" type="text/css" href="css/estilo_registro.css">
</head>

<div class="contenedor-form">

  <div class="formulario login">
    <h2>Inicio de sesión</h2>

    <form method="post" autocomplete="on" action="">
      <div class="contenedor-fila-2">
        <p class="item-fila-2">Correo electrónico: </p>
        <input class="item-fila-2" type="email" name="email" autocomplete="email"
         placeholder="Inserte nuevo correo electrónico" maxlength="35" required
         pattern=".{10,}">
      </div>
      <div class="contenedor-fila-2">
        <p class="item-fila-2">Contraseña:  </p>
        <input class="item-fila-2" type="password" name="contraseña" maxlength="30"
        autocomplete="current-password" placeholder="Inserte su contraseña" required
        pattern=".{3,}">
      </div>
      <input type="submit" name="inicio-sesion" value="Enviar">
    </form>
  </div>

  <div class="formulario registro">
    <h2>Registro</h2>

    <form method="post" autocomplete="on">
      <div class="contenedor-fila-2">
        <p class="item-fila-2">Correo electrónico: </p>
        <input class="item-fila-2" type="email" name="email" maxlength="35" required
        autocomplete="email" placeholder="Inserte su email" pattern=".{10,}">
      </div>
      <div class="contenedor-fila-2">
        <p class="item-fila-2">Nombre de usuario: </p>
        <input class="item-fila-2" type="username" name="nombre" maxlength="30"
        required autocomplete="username" placeholder="Inserte un nombre de usuario"
        pattern=".{4,}">
      </div>
      <div class="contenedor-fila-2">
        <p class="item-fila-2">Contraseña:  </p>
        <input class="item-fila-2" type="password" name="contraseña" maxlength="30"
        required autocomplete="current-password" placeholder="Inserte su contraseña"
        pattern=".{3,}">
      </div>
      <div class="contenedor-fila-2">
        <p class="item-fila-2">Repetir contraseña:  </p>
        <input class="item-fila-2" type="password" name="conf_contraseña"
        autocomplete="new-password" placeholder="Inserte su contraseña"
        maxlength="30" required pattern=".{3,}">
      </div>
      <input type="submit" name="registro" value="Enviar">
    </form>
  </div>

</div>

{% endblock %}
