{# noticia_moderador.twig #}

{% extends "layout.twig" %}


{% block principal %}

  <head>
    <link rel="stylesheet" type="text/css" href="css/estilo_noticia.css">
    <link rel="stylesheet" type="text/css" href="css/estilo_moderador.css">
  </head>

  <!-- NOTICIA: comienzo  -->
  <div class="seccion-noticias">
    <div class="noticia">

      <article>
        <header>
          <h1>{{ noticia.titulo }}</h1>
          <h2>Escrito por {{ noticia.autor }}</h2>
            <h3>{{ noticia.fecha }}</h3>
          <div class="contenedor-fila-2">
            <h4>Etiquetas: {{ noticia.etiquetas }}</h4>
            <h4>{{ noticia.visitas }} visitas</h4>
          </div>
          <div class="contenedor-imagen">
            <a href="{{ noticia.enlace }}">
              <img src="{{ noticia.imagen }}" alt=""/>
            </a>
          </div>

          {% for parrafo in noticia.texto %}
          <p class="parrafo">
            {{  parrafo }}
          </p>
          {% endfor %}
        </header>
      </article>

    </div>


    <!-- Enlaces -->
    <div class="enlaces">

      <a href="https://www.facebook.com/" target="_blank" title="Compartir en Facebook"
        onclick="compartir('Twitter', '{{ noticia.titulo }}', '{{ noticia.imagen }}'); return false;">

        <img src="/media/icons/fb_ico.png"/>
      </a>
      <a href="https://twitter.com/intent/tweet?text='{{ noticia.titulo }}' vía
        {{ noticia.enlace }}" target="_blank" title="Compartir en Twitter">
        <img src="/media/icons/tw_ico.png"/>
      </a>

      <a href="?p=imprimir&id={{ noticia.id }}" target="_blank" title="Imprimir">
        <img src="/media/icons/print.png"/>
      </a>

    </div>
    <!-- Enlaces -->


    <!-- Comentarios -->
      <div class="seccion-comentarios">
      <h2>Comentarios</h2>

      {% if usuario is defined %}
      <div class="navitem comentario">
        <form method="post" action="" >
          <input type="text" name="comentario" maxlength="140" required
          placeholder="Añade un comentario público..." autocomplete="off">
          <input class="boton" type="submit" value="Comentar"/>
        </form>
      </div>
      {% endif %}

      {% for item in noticia.comentarios %}
        <div class="navitem comentario">
          <div class="cabecera-comentario">
            <h4>{{ item.usuario }}</h4>
            <h5>{{ item.fecha }}</h5>
            <!-- <p class="nulo">{{ item.index }}</p> -->
            <form class="form-botones" name="moderador" id="form{{ loop.index }}" method="post" action="?p={{ pagina }}&id={{ noticia.id }}">
              <input class="nulo" type="number" name="index" readonly value="{{ item.index }}">
              <button class="bttn borrar" type="submit" name="borrar" formmethod="post" formaction="?p={{ pagina }}&id={{ noticia.id }}">B</button>

              <button class="bttn editar" type="submit" name="editar" formmethod="post" formaction="?p={{ pagina }}&id={{ noticia.id }}">E</button>
            </form>
          </div>
          <div class="cuerpo">
              {% if item.editado %}
                <p>Comentario editado por moderador</p>
              {% endif %}
            <textarea name="texto" maxlength="140" rows="3" form="form{{loop.index}}">{{ item.texto }}</textarea>
          </div>
        </div>
      {% endfor %}
    </div>
    <!-- Comentarios -->

  </div>

{% endblock %}
